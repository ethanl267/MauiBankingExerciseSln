<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiBankingExercise.Views.TransactionPage"
             xmlns:vm="clr-namespace:MauiBankingExercise.ViewModels"
             xmlns:models="clr-namespace:MauiBankingExercise.Models"
             Title="TransactionPage" >

    <CollectionView ItemsSource="{Binding Transactions}">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="models:Transaction">
                <StackLayout Padding="10">
                    <Label Text="Transactions"/>
                    <Label Text="{Binding TransactionId}"/>
                    <Label Text="{Binding TransactionDate}"/>
                    <Label Text="{Binding TransactionType}"/>
                </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>