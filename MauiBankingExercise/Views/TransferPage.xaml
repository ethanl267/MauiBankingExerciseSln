<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiBankingExercise.Views.TransferPage"
             Title="Transfer">

    <ScrollView>
        <VerticalStackLayout Padding="15" Spacing="20">

            <Border Stroke="#D5DBDB"
                    StrokeThickness="1"
                    BackgroundColor="#ECF0F1"
                    StrokeShape="RoundRectangle 12"
                    Padding="15">
                <VerticalStackLayout Spacing="5">
                    <Label Text="Account Details" FontSize="20" FontAttributes="Bold" />
                    <Label Text="{Binding SelectedAccount.AccountNumber}" FontSize="16" />
                    <Label Text="{Binding SelectedAccount.AccountBalance, StringFormat='Balance: {0:C}'}"
                           FontSize="16" TextColor="Green" />
                    <Label Text="{Binding SelectedAccount.AccountTypeId, StringFormat='Type: {0}'}" FontSize="14" />
                </VerticalStackLayout>
            </Border>

            <Entry x:Name="AmountEntry"
                    Placeholder="Enter amount"
                    Keyboard="Numeric" />

            
            <HorizontalStackLayout Spacing="10">
                <Button Text="Deposit" Clicked="DepositClicked" />
                <Button Text="Withdraw" Clicked="WithdrawClicked" />
            </HorizontalStackLayout>

            
            <CollectionView ItemsSource="{Binding Transactions}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout Padding="10" Margin="5" BackgroundColor="#F9F9F9" Spacing="2">
                            <Label Text="{Binding TransactionDate, StringFormat='{0:g}'}" FontSize="14" />
                            <Label Text="{Binding Description}" FontSize="14" />
                            <Label Text="{Binding Amount, StringFormat='{0:C}'}" FontSize="14" 
                                   TextColor="{Binding Amount, Converter={StaticResource AmountToColorConverter}}" />
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
